algoritmo "alturaepesoadequado"

Var
   Nome: caractere
   IMC, Peso, Altura: Real

inicio

   Escreva ("Digite o seu nome:")
   Leia (Nome)
   Escreva ("Digite o seu peso: ")
   Leia (Peso)
   Escreva ("Digite a sua altura: ")
   Leia (Altura)
   IMC <- Peso / (Altura * Altura)
   Escreva ("O IMC é",IMC)
   
fimalgoritmo
